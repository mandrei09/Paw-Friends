<div id="wrapper" style="margin-top: 100px;">
    <div style="background-color: floralwhite; height: 40px; width: 600px; text-align: center; border-radius: 25px; align-self: center;">
    <h2>@ViewBag.Title</h2>
    </div>

    <form method="post" action="/Categories/Edit/@ViewBag.Category.Id">
        <label style="background-color: floralwhite">Title: </label>
    	<textarea id="text" name="CategoryName" rows="4" style="margin-top: 10px; overflow: hidden; word-wrap: break-word; height: 20px; width:700px; ">@ViewBag.Category.CategoryName</textarea>  
        <br /><br />

        <label style="background-color: floralwhite; font-size: 15px;">Description: </label>
		    <textarea placeholder="Enter something cat-nific..." id="text" name="Descriere" rows="4" style="margin-top: 10px; overflow: hidden; word-wrap: break-word; resize: none; height: 300px; width:700px; ">@ViewBag.Category.Descriere</textarea>  
        <br /><br />

        <label style="background-color: floralwhite; font-size: 15px;">Icon: </label>
            <textarea id="text" name="Icon" rows="4" style="margin-top: 10px; overflow: hidden; word-wrap: break-word; height: 20px; width:700p">@ViewBag.Category.Icon</textarea>
        <br /><br />

        <button class="btn btn-outline-dark btn-floating m-1" type="submit">Modify Category!</button>

    </form>
</div>


